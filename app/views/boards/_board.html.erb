<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
    <%= image_tag board.board_image.url, class: 'card-img-top', width: 300, height: 200 %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to "#{ board.title }", board_path(board) %>
        </h4>
        <div class='mr10 float-right'>
        </div>
        <% if current_user.own?(board) %>
          <div class='mr10 float-right'>
          <%= render 'crud_menus', board: board %>
        <% else %>
          <%= render 'bookmarks/bookmark_area', board: board %>
          </div>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i> <%= board.user.decorate.full_name %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i><%= l board.created_at, format: :short %></li>
        </ul>
        <p class="card-text"><%= board.body%></p>
      </div>
    </div>
  </div>
</div>
