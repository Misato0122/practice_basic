<%= form_with model: @board, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body%>
  </div>

  <%= f.submit '掲示板作成', class: 'btn btn-primary'%>
<% end %>